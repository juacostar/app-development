<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">
    <com.example.androidtictactoe.BoardView
        android:id="@+id/board"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/humanR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Human: 0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tieR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/humanR"
                android:text="Tie: 0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/androidR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tieR"
                android:text="Android: 0"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView android:id="@+id/information" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="info"
        android:gravity="center_horizontal" android:layout_marginTop="20dp"
        android:textSize="20dp" />


</LinearLayout>
